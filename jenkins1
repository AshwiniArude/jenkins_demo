pipeline {
    agent any

    environment {
        IMAGE_NAME = "shreyanewaskar27/vartaverse-v1:latest" // lowercase is safer
        IMAGE_TAG = "3.0.0"
    }

    stages {

        stage('Try') {
            steps {
                echo "hello i have startyed"
            }
        }


        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    def customImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    env.IMAGE_ID = customImage.id
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'ashwiniarude') {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                    }
                }
            }
        }
    }

    post {
        success { echo "Docker image successfully built and pushed üöÄ" }
        failure { echo "Pipeline failed ‚ùå" }
    }
}